<%if action == :new %>
  <form action="<%= cats_url %>" method="post">
<% else %>
  <form action="<%= cat_url(cat) %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
<% end %>

  <label for="name">Name
  
    <input type="text" name="cat[name]" value="<%= cat.name %>">

  </label>

  <label for="color">Color</label>
    <select id="color" name="cat[color]">
        <% Cat::COLORS.each do |color| %>
            <option value="<%= color %>" <%= "selected" if cat.color == color%> >
                <%= color %>
            </option>
        <% end %>
    </select>

  <label for="birth_date">Birth Date
    <input type="date" value="<%= cat.birth_date %>" name="cat[birth_date]" min="1995-01-01" max="<%= Date.today.to_s %>"> 

  </label>

  <% Cat::SEX.each do |sex| %>
  <label>
    <input type="radio" name="cat[sex]" value="<%= sex %>" <%= "checked" if cat.sex == sex%> >
    <%= sex %>
  </label>
  <% end %>

  <label for="description">description
    <textarea name="cat[description]" ><%= cat.description %></textarea>
  </label>
  
  <input type="submit" value="Generate Cat">
</form>